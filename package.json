{
  "name": "agent-speech",
  "version": "0.4.4",
  "description": "Claude Code text-to-speech plugin using macOS native say command",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "agent-speech": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./mcp": {
      "import": "./dist/mcp-server.js",
      "types": "./dist/mcp-server.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "inspect": "./scripts/inspect.sh",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "postinstall": "npm run build"
  },
  "keywords": [
    "mcp",
    "tts",
    "text-to-speech",
    "claude-code",
    "macos",
    "say",
    "accessibility"
  ],
  "author": "welico",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "config",
    ".claude-plugin",
    "hooks",
    ".mcp.json",
    "package.json",
    "README.md",
    "LICENSE",
    "INSTALL.md"
  ]
}
