{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "clear": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "tsc: watch",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "vitest: run",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "clear": true
      }
    },
    {
      "label": "vitest: ui",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:ui"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "isBackground": true
    },
    {
      "label": "vitest: coverage",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:coverage"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "clear": true
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "presentation": {
        "reveal": "always",
        "clear": true
      }
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "pnpm",
      "args": ["typecheck"],
      "presentation": {
        "reveal": "always",
        "clear": true
      }
    }
  ]
}
